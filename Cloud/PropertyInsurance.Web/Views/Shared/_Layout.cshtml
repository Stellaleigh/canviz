<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-height clear">
        <div class="logo navbar-height">
            <img src="~/Content/images/logo.svg" />
        </div>
        <div class="container">
            <ul class="navbar-left navbar-paddingtop">
                <li>Home</li>
                <li>Directory</li>
                <li>Policies</li>
            </ul>
            @Html.Partial("_LoginPartial")
            <ul class="navbar-right navbar-paddingtop">
                <li class="searchBtn"><img src="@Url.Content("~/Content/images/Contoso-Insurance-Misc-Icons_SEARCH.png")" /></li>
                <li class="noteBtn"><img  src="@Url.Content("~/Content/images/Contoso-Insurance-Misc-Icons-NOTIFICATION.svg")" /></li>
            </ul>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
